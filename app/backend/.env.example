# Backend example environment variables for local development
# Copy this file to .env and edit values as needed before running the app.

# Django settings
DJANGO_SECRET_KEY=replace-me-with-a-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Database (optional - default uses sqlite)
# Example for Postgres: DATABASE_URL=postgres://user:pass@localhost:5432/dbname
DATABASE_URL=sqlite:///db.sqlite3

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Additional configuration
# CORS origins (comma-separated) - Vite dev server runs on 5173 by default
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
